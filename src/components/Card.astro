---
interface Props {
  img: string;
  title: string;
  body: string;
  href: string;
  slug: string;
  precio: string;
}

const { img, href, title, body, slug, precio } = Astro.props;
---

<li class="link-card">
  <img src={img} alt={title} class="product-image">
  <a href={`/product/${slug}`} class="product-link">
    <h2 class="product-title">
      {title}
    </h2>
    <p class="product-body">
      {body}
    </p>
    <p class="product-price"> ${precio}</p>
  </a>
  <div class="card-buttons">
    <a href={`/product/${slug}`} class="more-info-button">Ver Info</a>
  </div>
</li>

<style>
  .link-card {
    flex: 1;
    max-width: calc(25% - 1rem);
    flex-basis: calc(25% - 1rem);
    margin-bottom: 0.5rem;
    background-color: #222;
    color: white;
    border-radius: 7px;
  }

  .link-card:last-child {
    margin-bottom: 0;
  }

  .product-image {
    width: 100%;
    height: 350px;
    object-fit: cover;
  }

  .product-link {
    width: 100%;
    text-decoration: none;
    padding: 1rem;
    text-align: center;
    opacity: 0.8;
  }

  .product-title {
    text-decoration: none;
    color: rgb(255, 255, 255);
    margin: 0.5rem 0;
    font-size: 1.25rem;
    font-weight: bold;
    list-style: none;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .product-body {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: white;
    font-size: 1rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    margin-left: 0.3rem;
    margin-right: 0.3rem;;
  }

  .link-card:is(:hover, :focus-within) {
    background-image: var(--accent-gradient);
  }

  .link-card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .card-buttons {
    display: flex;
    justify-content: center;
    padding: 1rem;
    gap: 0.5rem;
  }

  .more-info-button {
    background-color: #00bfff;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    text-align: center;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  }

  .more-info-button:hover {
    background-color: #009acd;
  }

  .product-price{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size:x-large;
    color: white;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .link-card {
      width: calc(45% - 1rem); /* Ancho de la tarjeta */
      flex: 0 0 calc(45% - 1rem); /* Ancho fijo para la tarjeta */
      max-width: calc(45% - 1rem); /* Ajuste máximo del ancho */
      height: auto; /* Altura automática para adaptarse al contenido */
      margin-bottom: 1rem; /* Margen inferior */
    }
  
    .product-image {
      height: 200px; /* Altura de la imagen */
      object-fit: cover; /* Ajuste de la imagen */
    }
  
    .product-link {
      padding: 0.75rem; /* Relleno del enlace */
    }
  
    .product-title {
      font-size: 1rem; /* Tamaño de la fuente del título */
    }
  
    .product-body {
      font-size: 0.85rem; /* Tamaño de la fuente del cuerpo */
      text-align: center; /* Alineación del texto */
      margin-left: 0; /* Margen izquierdo */
      margin-right: 0; /* Margen derecho */
    }
  
    .card-buttons {
      padding: 0.75rem; /* Relleno de los botones */
    }
  
    .more-info-button {
      padding: 0.3rem 0.8rem; /* Relleno del botón */
      font-size: 0.8rem; /* Tamaño de la fuente del botón */
    }
  
    .product-price {
      font-size: 1rem; /* Tamaño de la fuente del precio */
    }
  }
</style>
