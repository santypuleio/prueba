    }

  ];
  return productos.map(({ slug, title, description1, description2, description3, description4, description5, img, precio}) => {
    return {
      params: { slug },
      props: { slug, title, description1, description2, description3, description4, description5, img, precio},
    };
  });
}
const { slug, title, description1, description2, description3, description4, description5, img, precio } = Astro.props;

---
<Layout>
  <Navbar />
  <Body>
    <img src={img} alt="" class="product-image" />
    <div class="product-info-container">
      <h2 class="product-title">{title}</h2>
      <p class="product-price">{precio}</p>
      <div class="medios-pago">
        <p class="product-description">Medios de pago</p>
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-building-bank" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M3 21l18 0" />
          <path d="M3 10l18 0" />
          <path d="M5 6l7 -3l7 3" />
          <path d="M4 10l0 11" />
          <path d="M20 10l0 11" />
          <path d="M8 14l0 3" />
          <path d="M12 14l0 3" />
          <path d="M16 14l0 3" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-cashapp" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M17.1 8.648a.568 .568 0 0 1 -.761 .011a5.682 5.682 0 0 0 -3.659 -1.34c-1.102 0 -2.205 .363 -2.205 1.374c0 1.023 1.182 1.364 2.546 1.875c2.386 .796 4.363 1.796 4.363 4.137c0 2.545 -1.977 4.295 -5.204 4.488l-.295 1.364a.557 .557 0 0 1 -.546 .443h-2.034l-.102 -.011a.568 .568 0 0 1 -.432 -.67l.318 -1.444a7.432 7.432 0 0 1 -3.273 -1.784v-.011a.545 .545 0 0 1 0 -.773l1.137 -1.102c.214 -.2 .547 -.2 .761 0a5.495 5.495 0 0 0 3.852 1.5c1.478 0 2.466 -.625 2.466 -1.614c0 -.989 -1 -1.25 -2.886 -1.954c-2 -.716 -3.898 -1.728 -3.898 -4.091c0 -2.75 2.284 -4.091 4.989 -4.216l.284 -1.398a.545 .545 0 0 1 .545 -.432h2.023l.114 .012a.544 .544 0 0 1 .42 .647l-.307 1.557a8.528 8.528 0 0 1 2.818 1.58l.023 .022c.216 .228 .216 .569 0 .773l-1.057 1.057z" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-coin-bitcoin" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
          <path d="M9 8h4.09c1.055 0 1.91 .895 1.91 2s-.855 2 -1.91 2c1.055 0 1.91 .895 1.91 2s-.855 2 -1.91 2h-4.09" />
          <path d="M10 12h4" />
          <path d="M10 7v10v-9" />
          <path d="M13 7v1" />
          <path d="M13 16v1" />
        </svg>
      </div>
      <div class="retiro">
        <p class="product-description">Formas de retiro</p>
        <div class="retiro1">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-truck" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
            <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
            <path d="M5 17h-2v-11a1 1 0 0 1 1 -1h9v12m-4 0h6m4 0h2v-6h-8m0 -5h5l3 5" />
          </svg>
          <p class="product-description">Envio GRATIS a Capital Federal</p>
        </div>
        
        <div class="retiro1">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-building-store" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M3 21l18 0" />
            <path d="M3 7v1a3 3 0 0 0 6 0v-1m0 1a3 3 0 0 0 6 0v-1m0 1a3 3 0 0 0 6 0v-1h-18l2 -4h14l2 4" />
            <path d="M5 21l0 -10.15" />
            <path d="M19 21l0 -10.15" />
            <path d="M9 21v-4a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v4" />
          </svg>
          <p class="product-description">Retiro GRATIS en sucursal</p>
        </div>
      </div>
      <div class="button-container">
        
        <script>
          import { getProductosEnCarrito } from './productContainer'; 
          const button = document.querySelector('button.add-to-cart-button');
          button.addEventListener('click', () => {
            const productId = button.id;
            let productosEnCarrito = getProductosEnCarrito();
            let productoEnCarrito = productosEnCarrito.find(producto => producto.id === productId);
            if(productoEnCarrito){
              productoEnCarrito.cantidad++;
              console.log("Ya está en el carrito.")
            }
            else{
                  // Si el producto no está en el carrito, agrégalo con cantidad 1
                  productoEnCarrito = {
                      id: productId,
                      cantidad: 1
                    };
                    productosEnCarrito.push(productoEnCarrito);
                    console.log(`Se agregó el producto ${productId} al carrito.`);
                }
            localStorage.setItem("productos-en-carrito", JSON.stringify(productosEnCarrito))
            console.log(productosEnCarrito);
            alert("El producto fue agregado al carrito");
          });
        </script>
        <button class="add-to-cart-button" id={slug}>Agregar al carrito</button>
    
      </div>
    
    
    </div>
    <div class="description-container">
      <h2 class="product-description">Descripcion</h2>
      <div class="linea"></div>
      <p class="product-description">{description1}</p>
      <p class="product-description">{description2}</p>
      <p class="product-description">{description3}</p>
      <p class="product-description">{description4}</p>
      <p class="product-description">{description5}</p>
    </div>
  </Body>
  <Footer />
</Layout>

<style>
  /* Estilo del contenedor del cuerpo */
  body{
    background-color: #333;
  }

/* Estilo de la imagen */
.product-image {
  width: 40%; /* Ocupa el 50% del ancho de la página */
  height: 30rem;
  float: left; /* Hace que la imagen flote a la izquierda */
  margin-right: 2rem; /* Espacio entre la imagen y el texto */
}
.product-info-container {
  display: inline;
  width: 46%;
  border: 1.2px solid black;
  border-radius: 1cap;
  margin-left: 1rem; /* Agrega un margen izquierdo */
  padding: 1rem; /* Agrega un espacio interno */
}

/* Estilo del título */
.product-title {
  height: fit-content;
  color: white;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-weight: bold;
  margin-top: 0; /* Elimina el margen superior para que el título esté pegado a la imagen */
  overflow: hidden; /* Evita que el título se superponga a la imagen */
  font-size: 1.8rem;
}

/* Estilo de la descripción */
.product-description {
  color: white;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* Estilo del precio */
.product-price{
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: white;
  font-size: 2rem;
  margin-top: 0;
}

.button-container{
  margin-top: 30px;
  display: flex;
  justify-content: center;
}
/* Estilo del botón */
.add-to-cart-button {
  background-color: #007bff; /* Color de fondo del botón */
  color: white; /* Color del texto del botón */
  border: none;
  padding: 10px 20px; /* Espaciado interno del botón */
  border-radius: 5px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
}

.add-to-cart-button:hover {
  background-color: #0056b3; /* Color de fondo del botón al pasar el ratón */
}

.retiro1{
  display: flex;
  align-items: center;
}

.description-container{
  width: 100%;
  display: inline-block;
  text-align: center;
}

.linea{
  width: 80%; /* Ocupa el 80% del ancho del contenedor padre */
  margin: 0 auto; /* Centra la línea horizontalmente */
  border-bottom: 2px solid black; /* Grosor y color de la línea */
}

@media (max-width: 768px) {
  /* Estilos para pantallas pequeñas */

  .product-image {
    width: 100%; /* Ancho completo */
    height: auto; /* Altura automática para mantener la proporción */
    margin-bottom: 1rem; /* Espacio entre la imagen y la información */
    float: none; /* Elimina el flotado para que la imagen se coloque arriba */
    margin-top: 1rem; /* Añade margen superior */
  }

  .product-info-container {
    width: 100%; /* Ancho completo */
    margin-left: 0; /* Elimina el margen izquierdo */
    padding: 1rem; /* Ajusta el espaciado interno */
    text-align: center; /* Centra el contenido */
  }

  .description-container {
    width: 100%; /* Ancho completo */
    text-align: left; /* Alinea el texto a la izquierda */
    padding: 0 1rem; /* Añade espacio a los lados */
  }

  .button-container {
    margin-top: 20px; /* Espacio superior ajustado */
  }
}
</style>
